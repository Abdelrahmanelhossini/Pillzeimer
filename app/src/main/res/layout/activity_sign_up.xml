<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logopill2"
                />
            <LinearLayout
                android:layout_below="@id/logo"
                android:id="@+id/logoheading"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:textStyle="italic|bold"
                    android:text="Create an Account!"
                    android:textColor="#4A3B9A"


                    android:textSize="40sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:id="@+id/comp"
                android:layout_below="@id/logoheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/fullname"
                    >

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"

                        android:backgroundTint="#66A998CD"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        />

                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"
                        android:backgroundTint="#66A998CD"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        />


                </LinearLayout>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/fullname"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:fontFamily="sans-serif-medium"
                    android:backgroundTint="#66A998CD"
                    android:ems="10"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:id="@+id/age"

                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:hint="Age"
                    android:fontFamily="sans-serif-medium"
                    android:ems="10"
                    android:backgroundTint="#66A998CD"
                    android:background="@drawable/edittext"
                    android:layout_below="@id/username"/>

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/age"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:backgroundTint="#66A998CD"
                    android:fontFamily="sans-serif-medium"
                    android:ems="10"
                    android:hint="Enter your Password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/repass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/pass"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:backgroundTint="#66A998CD"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Re-Enter your Password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    />
                <Button
                    android:id="@+id/signbtn"
                    android:layout_below="@id/repass"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="Register" />


                <Button
                    android:id="@+id/logintxt"
                    android:layout_below="@id/signbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4435ab"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:text="Already Registered? Signin!" />



            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
